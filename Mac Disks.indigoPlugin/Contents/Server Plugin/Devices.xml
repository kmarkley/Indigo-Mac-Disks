<?xml version='1.0'?>
<Devices>
	<Device type='relay' id='localDisk'>
		<Name>Local Disk</Name>
		<ConfigUI>
			<Field type='textfield' id='volumeName'>
				<Label>Volume name:</Label>
			</Field>
            <Field type='checkbox' id='preventSleep'>
                <Label>Prevent disk sleep:</Label>
            </Field>
            <Field type='checkbox' id='forceUnmount'>
                <Label>Force unmount:</Label>
                <Description>(may result in loss of data)</Description>
            </Field>
		</ConfigUI>
        <States>
            <State id='sizeTotal'>
                <ValueType>String</ValueType>
                <TriggerLabel>Total Size</TriggerLabel>
                <ControlPageLabel>Total Size</ControlPageLabel>
            </State>
            <State id='megsTotal'>
                <ValueType>Number</ValueType>
                <TriggerLabel>Total Megabytes</TriggerLabel>
                <ControlPageLabel>Total Megabytes</ControlPageLabel>
            </State>
            <State id='sizeUsed'>
                <ValueType>String</ValueType>
                <TriggerLabel>Used Size</TriggerLabel>
                <ControlPageLabel>Used Size</ControlPageLabel>
            </State>
            <State id='megsUsed'>
                <ValueType>Number</ValueType>
                <TriggerLabel>Used Megabytes</TriggerLabel>
                <ControlPageLabel>Used Megabytes</ControlPageLabel>
            </State>
            <State id='sizeFree'>
                <ValueType>String</ValueType>
                <TriggerLabel>Free Size</TriggerLabel>
