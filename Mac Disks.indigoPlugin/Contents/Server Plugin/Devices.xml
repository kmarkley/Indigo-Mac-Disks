            </State>
            <State id='percFree'>
                <ValueType>Number</ValueType>
                <TriggerLabel>Percent Free</TriggerLabel>
                <ControlPageLabel>Percent Free</ControlPageLabel>
            </State>
            <State id='filesystem'>
                <ValueType>String</ValueType>
