            </State>
            <State id='lastTouch'>
                <ValueType>String</ValueType>
                <TriggerLabel>Last Touch</TriggerLabel>
                <ControlPageLabel>Last Touch</ControlPageLabel>
            </State>
        </States>
	</Device>
