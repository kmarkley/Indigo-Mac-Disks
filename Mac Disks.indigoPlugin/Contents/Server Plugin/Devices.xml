<?xml version='1.0'?>
<Devices>
	<Device type='relay' id='localDisk'>
		<Name>Local Disk</Name>
		<ConfigUI>
			<Field type='textfield' id='volumeName'>
				<Label>Volume name:</Label>
			</Field>
            <Field type='checkbox' id='preventSleep'>
                <Label>Prevent disk sleep:</Label>
            </Field>
            <Field type='checkbox' id='forceUnmount'>
                <Label>Force unmount:</Label>
                <Description>(may result in loss of data)</Description>
            </Field>
            <Field id='mountPoint' type='textfield' hidden='true'>
                <Label>Mount Point:</Label>
            </Field>
		</ConfigUI>
        <States>
            <State id='size_total'>
                <ValueType>String</ValueType>
                <TriggerLabel>Total Size</TriggerLabel>
                <ControlPageLabel>Total Size</ControlPageLabel>
            </State>
            <State id='megs_total'>
                <ValueType>Number</ValueType>
                <TriggerLabel>Total Megabytes</TriggerLabel>
                <ControlPageLabel>Total Megabytes</ControlPageLabel>
            </State>
            <State id='size_used'>
                <ValueType>String</ValueType>
                <TriggerLabel>Used Size</TriggerLabel>
                <ControlPageLabel>Used Size</ControlPageLabel>
            </State>
            <State id='megs_used'>
                <ValueType>Number</ValueType>
                <TriggerLabel>Used Megabytes</TriggerLabel>
                <ControlPageLabel>Used Megabytes</ControlPageLabel>
            </State>
            <State id='size_free'>
                <ValueType>String</ValueType>
                <TriggerLabel>Free Size</TriggerLabel>
                <ControlPageLabel>Free Size</ControlPageLabel>
            </State>
            <State id='megs_free'>
                <ValueType>Number</ValueType>
                <TriggerLabel>Free Megabytes</TriggerLabel>
                <ControlPageLabel>Free Megabytes</ControlPageLabel>
            </State>
            <State id='percent_used'>
                <ValueType>Number</ValueType>
                <TriggerLabel>Percent Used</TriggerLabel>
                <ControlPageLabel>Percent Used</ControlPageLabel>
            </State>
            <State id='percent_free'>
                <ValueType>Number</ValueType>
                <TriggerLabel>Percent Free</TriggerLabel>
                <ControlPageLabel>Percent Free</ControlPageLabel>
            </State>
            <State id='identifier'>
                <ValueType>String</ValueType>
                <TriggerLabel>Identifier</TriggerLabel>
                <ControlPageLabel>Identifier</ControlPageLabel>
            </State>
            <State id='disk_type'>
                <ValueType>String</ValueType>
                <TriggerLabel>Disk Type</TriggerLabel>
                <ControlPageLabel>Disk Type</ControlPageLabel>
            </State>
            <State id='last_touch'>
                <ValueType>String</ValueType>
                <TriggerLabel>Last Touch</TriggerLabel>
                <ControlPageLabel>Last Touch</ControlPageLabel>
            </State>
        </States>
	</Device>
