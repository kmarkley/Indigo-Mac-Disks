            </State>
            <State id='megsFree'>
                <ValueType>Number</ValueType>
                <TriggerLabel>Free Megabytes</TriggerLabel>
                <ControlPageLabel>Free Megabytes</ControlPageLabel>
            </State>
            <State id='percUsed'>
                <ValueType>Number</ValueType>
                <TriggerLabel>Percent Used</TriggerLabel>
