<?xml version='1.0'?>
<PluginConfig>
    <Field id='stateLoopFreq' type='menu' defaultValue='10'>
        <Label>Update frequency:</Label>
        <List>
            <Option value='1'>1 Second</Option>
            <Option value='2'>2 Seconds</Option>
            <Option value='5'>5 Seconds</Option>
            <Option value='10'>10 Seconds</Option>
            <Option value='15'>15 Seconds</Option>
            <Option value='30'>30 Seconds</Option>
            <Option value='60'>60 Seconds</Option>
        </List>
    </Field>
    <Field id='stateLoopHelp' type='label' fontColor='darkgray' fontSize='small' alignWithControl='true'>
        <Label>How often to check the status of devices.
        </Label>
    </Field>
    <Field id='touchDiskFreq' type='menu' defaultValue='10'>
        <Label>Touch disk frequency:</Label>
        <List>
            <Option value='1'>1 Minute</Option>
            <Option value='2'>2 Minutes</Option>
            <Option value='5'>5 Minutes</Option>
            <Option value='10'>10 Minutes</Option>
            <Option value='15'>15 Minutes</Option>
            <Option value='30'>30 Minutes</Option>
            <Option value='60'>60 Minutes</Option>
        </List>
    </Field>
    <Field id='touchDiskHelp' type='label' fontColor='darkgray' fontSize='small' alignWithControl='true'>
        <Label>How often to touch a hidden file on disks configured to prevent sleep.
        </Label>
    </Field>
    <Field id='identifyFreq' type='menu' defaultValue='30'>
        <Label>Reset indentifier frequency:</Label>
        <List>
            <Option value='1'>1 Minute</Option>
            <Option value='2'>2 Minutes</Option>
            <Option value='5'>5 Minutes</Option>
            <Option value='10'>10 Minutes</Option>
            <Option value='15'>15 Minutes</Option>
            <Option value='30'>30 Minutes</Option>
            <Option value='60'>60 Minutes</Option>
        </List>
    </Field>
    <Field id='identifyHelp' type='label' fontColor='darkgray' fontSize='small' alignWithControl='true'>
        <Label>How often to confirm/reset the logical attachment point of a disk. Only matters for removable drives remounted after long absence.
        </Label>
    </Field>
    <Field id='debugSeparator' type='separator' />
	<Field id='showDebugInfo' type='checkbox'>
		<Label>Enable debuging:</Label>
		<Description>(not recommended)</Description>
	</Field>
</PluginConfig>
